<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:navigationBarColor">@color/colorTertiary</item>

    </style>


    <style name="LabelTextBottomNavView">
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="TextActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextOverline">
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="BigText">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FeedDetailText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/gray2</item>
    </style>

    <style name="TextUnderlinePrimaryColor">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="thumbRadius">1dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="HeadlinesTitleText">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:letterSpacing">0.015</item>
    </style>

    <style name="SubTitleText">
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:letterSpacing">0.015</item>
    </style>

    <style name="BlackBoldText">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>


    <style name="DetailPageHeading" parent="BlackBoldText">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="DetailPageSummary" >
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:letterSpacing">0.005</item>>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Rippleeffect">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:padding">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


</resources>